---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  comments:
    min-spaces-from-content: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  comments-indentation: disable
  line-length: disable
  truthy: disable

ignore: |
  .ansible-lint
  .cache
  .github
  .poetry
  .tox
  .travis.yml
